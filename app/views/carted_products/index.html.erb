<h1> Check Out Page </h1>

<% @carted_products.each do |carted_product| %>
  <h2> <%= carted_product.bee.name %> </h2>  
  <h2> <%= number_to_currency(carted_product.bee.price) %> X <%= carted_product.quantity %> - <%= link_to "remove", "/carted_products/#{ carted_product.id}", method: :delete  %> </h2>  
  <% end %>

  <%= link_to "Buy Now!", "/orders", method: :post, class: "btn btn-success" %>
