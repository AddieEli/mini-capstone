<h1> Edit Bee Stuff </h1>

<%= form_tag "/bees/#{@bee.id}", method: :patch do %>
<div>
  Name: <input type="text" name="name" value="<%= @bee.name %>">
</div>
<div>
  Price: <input type="text" name="price" value="<%= @bee.price %>">
</div>
<div>
  Image: <input type="text" name="image" value="<%= @bee.image %>">
</div>
<div>
  Description: <input type="text" name="description" value="<%= @bee.description %>">
</div>
<input type="submit" value="Updated Bee Item" >
<% end %>
